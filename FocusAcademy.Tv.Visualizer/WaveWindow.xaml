<Window x:Class="FocusAcademy.Tv.Waveform.WaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:waveform1="clr-namespace:FocusAcademy.Tv.Waveform"
        DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="400" Width="600"
        Closing="MainWindow_OnClosing"
        WindowState="Normal">
    <DockPanel>
        <ItemsControl ItemsSource="{Binding Channels}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="waveform1:WaveformData">
                    <waveform1:WaveControl PositionInPerc="{Binding PositionInPerc}" ChannelData="{Binding Data}" MinHeight="150" Margin="30" PositionChanged="Waveform_OnPositionChanged"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</Window>
